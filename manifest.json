{
    "name": "WhatsApp Focus",
    "description": "A better and more focused WhatsApp Web experience!",
    "version": "1.0",
    "manifest_version": 3,
    
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "pages/popup.html",
        "default_icon": {
            "16": "/images/16.png",
            "32": "/images/32.png",
            "48": "/images/48.png",
            "128": "/images/128.png"
        }
    },
    "icons": {
        "16": "/images/16.png",
        "32": "/images/32.png",
        "48": "/images/48.png",
        "128": "/images/128.png"
    }    
}